<h1>New Post</h1>

<%= form_for Post.new, url: {action: "create"} do |f| %>
    <div class="form-group">
      <%= f.text_field :title, class: "form-control", placeholder: "title" %>
    </div>
    <div class="form-group">
      <%= f.text_area :text, class: "form-control", size: "60x12", placeholder: "text" %>
    </div>
    <div class="form-group">
      <%= f.submit "Create Post", class: "btn, btn-default" %>
    </div>
<% end %>